<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>com.util.signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.util.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Fileupload</servlet-name>
        <servlet-class>com.util.Fileupload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>usersignup</servlet-name>
        <servlet-class>com.util.usersignup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userlogin</servlet-name>
        <servlet-class>com.util.userlogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>mail_send</servlet-name>
        <servlet-class>com.util.mail_send</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Fileupload</servlet-name>
        <url-pattern>/Fileupload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>usersignup</servlet-name>
        <url-pattern>/usersignup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userlogin</servlet-name>
        <url-pattern>/userlogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mail_send</servlet-name>
        <url-pattern>/mail_send</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
